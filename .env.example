# ===================================================================
# Database Configuration
# ===================================================================
# REQUIRED: PostgreSQL connection settings
POSTGRES_DB=vtt_transcribe
POSTGRES_USER=vtt_user
POSTGRES_PASSWORD=change_me_in_production  # REQUIRED - Change in production!
POSTGRES_PORT=5432
POSTGRES_HOST_AUTH_METHOD=scram-sha-256

# REQUIRED: Full database URL used by API and worker services
# Format: postgresql://user:password@host:port/database
# Example: DATABASE_URL=postgresql://vtt_user:your_secure_password@db:5432/vtt_transcribe
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:${POSTGRES_PORT}/${POSTGRES_DB}

# ===================================================================
# OpenAI API
# ===================================================================
# REQUIRED: Your OpenAI API key for transcription
OPENAI_API_KEY=sk-your-openai-api-key-here

# ===================================================================
# API Configuration
# ===================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# ===================================================================
# Security
# ===================================================================
# REQUIRED: Change to a secure random string in production!
SECRET_KEY=change_me_to_random_string_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===================================================================
# CORS
# ===================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ===================================================================
# Storage
# ===================================================================
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=104857600

# ===================================================================
# Logging
# ===================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===================================================================
# Optional: Hugging Face Token (for diarization)
# ===================================================================
HUGGINGFACE_TOKEN=

# ===================================================================
# Worker Configuration
# ===================================================================
WORKER_CONCURRENCY=2
WORKER_MAX_TASKS_PER_CHILD=100

# ===================================================================
# Frontend
# ===================================================================
FRONTEND_PORT=3000
